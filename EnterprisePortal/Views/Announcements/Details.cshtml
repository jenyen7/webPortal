@model EnterprisePortal.Models.Announcement

@{
    ViewBag.Title = "公告";
}

<div class="page-header">
    <div class="page-header-title">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
            <li class="breadcrumb-item">
                <a href="@System.Web.Configuration.WebConfigurationManager.AppSettings["indexUrl"]">
                    <i class="icofont icofont-home"></i>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">@ViewBag.Title</a>
            </li>
        </ul>
    </div>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="tab-content">
                <div class="card">
                    <div class="card-header">
                        @if (Model.IsPublic)
                        {
                            <label class="label label-lg label-default">全域</label>
                            <label class="label label-lg" style="background-color:@Model.Department.DepartmentColor">@Model.Department.DepartmentName.Substring(0, 2)</label>
                        }
                        else
                        {
                            <label class="label label-lg label-inverse">部門</label>
                        }
                        <h5 class="card-header-text">@Html.DisplayFor(model => model.Title)</h5>
                        <span>發佈時間: @Model.PublishedDate</span>
                        <div class="card-header-right">
                            <a href="@Url.Action("HomePage","Login")" class="previous-btn">回首頁</a>
                        </div>
                    </div>
                    <div class="card-block">
                        <div class="view-desc" style="min-height:500px">
                            @Html.Raw(Model.AnnouncementContent)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $('.view-desc').find('img').attr('style', 'max-width:1130px');
    </script>
}