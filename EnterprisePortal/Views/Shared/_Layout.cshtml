            zeroRecords: "無搜尋結果",
            emptyTable: "此列表無紀錄。",
            lengthMenu: "一頁顯示 _MENU_ 筆",
            info: "第 _START_ 筆至第 _END_ 筆，共 _TOTAL_ 筆",
            infoEmpty: "共 0 筆",
            infoFiltered: "(已篩選了 _MAX_ 筆)",
            infoPostFix: "",
            paginate: {
                first: "第一頁",
                previous: "上一頁",
                next: "下一頁",
                last: "最後一頁"
            }
        };

        $('#checkedAll').click(function () {
            if (this.checked) {
                $('.checkSingle').each(function () {
                    this.checked = true;
                });
            } else {
                $('.checkSingle').each(function () {
                    this.checked = false;
                });
            }
        });

        $('.checkSingle').click(function () {
            if ($(this).is(':checked')) {
                var isAllChecked = 0;

                $('.checkSingle').each(function () {
                    if (!this.checked)
                        isAllChecked = 1;
                });
                if (isAllChecked == 0) {
                    $('#checkedAll').prop('checked', true);
                }
            }
            else {
                $('#checkedAll').prop('checked', false);
            }
        });

        $('#createBtn').click(function () {
            window.location.href = '@Url.Action("Create")';
        });

        $('.delete').click(function(e) {
            e.preventDefault();
            var id = $(this).data('id');
            $('#itemid').val(id);
        });

        $('#deleteConfirmed').click(function () {
            var section = $('#section').val();
            if (section == null) {
                var token = $('input[name="__RequestVerificationToken"]').val();
                var id = $('#itemid').val();
                $.post('@Url.Action("Delete")', { __RequestVerificationToken: token, id: id }, function (data) {
                    $('#myModal').modal('hide');
                    window.location.replace(data);
                });
            } else {
                return false;
            }
        });
    </script>
